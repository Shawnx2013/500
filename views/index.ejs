<div class="card dayCounter">
    <div class="card-header">
        Days
    </div>
    <div class="card-body">
        <blockquote class="blockquote">
            <h3 class="display-5 text-wrap mx-auto" style="width: 500px">今天是在一起的第
                <br><span class="badge badge-secondary"><%= dayCount %></span> <br>天</h3>
        </blockquote>
    </div>
</div>
<div class="photos">
    <h2>最近上传的照片</h2>
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% for(var i = 0; i<photos.length; i++) {%>
                <% if ( i === 0 ) {%>
                    <li data-target="#carouselControls" data-slide-to="0" class="active"></li>
                <% } else { %>
                    <li data-target="#carouselControls" data-slide-to="<%= i %>"></li>
                <% } %>
            <% } %>
        </ol>
        <div class="carousel-inner">
        <% for(var k = 0; k <photos.length; k++) {%>
            <% if ( k === 0 ) {%>
                <div class="carousel-item active" data-interval="2000">
                    <img src="<%= photos[k].path%>" class="d-block img-thumbnail">
                </div>
            <% } else { %>
                <div class="carousel-item" data-interval="2000">
                    <img src="<%= photos[k].path%>" class="d-block img-thumbnail">
                </div>
            <% } %>
        <% } %>
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
